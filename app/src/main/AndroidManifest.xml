<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso para acceder a Internet (necesario para cargar imágenes remotas) -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Permisos para leer imágenes de la galería -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    
    <!-- Permisos para escribir en almacenamiento externo (para guardar tarjetas descargadas) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RANTU">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RANTU"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Deep Link para Magic Link de Supabase -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                
                <!-- Deep link personalizado para la app -->
                <data android:scheme="rantu" 
                      android:host="login" />
            </intent-filter>
            
            <!-- Deep Links para Web URLs -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                
                <!-- URLs de la versión web -->
                <data android:scheme="https" 
                      android:host="prototype-delta-vert.vercel.app" />
                <data android:scheme="http" 
                      android:host="prototype-delta-vert.vercel.app" />
                      
                <!-- Para desarrollo local -->
                <data android:scheme="http" 
                      android:host="localhost"
                      android:port="4321" />
            </intent-filter>
            
            <!-- Deep Links para compartir cuartos -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                
                <!-- URL scheme personalizado para compartir -->
                <data android:scheme="rantu" 
                      android:host="cuarto"
                      android:pathPrefix="/" />
            </intent-filter>
        </activity>
    </application>

</manifest>